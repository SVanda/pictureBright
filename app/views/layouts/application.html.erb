<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'icon.png' %>
    <title><%= content_for?(:title) ? yield(:title) : "pictureBright" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "pictureBright" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Amatic+SC', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Ubuntu', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Oswald', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag "underscore-min", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "camanFiltering", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "caman.full.min", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "jquery-1.11.0.min", "data-turbolinks-track" => true  %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>
  </body>
</html>
